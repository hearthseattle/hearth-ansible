description "hearth application"

start on runlevel [2345]
stop on runlevel [016]


respawn
setuid hearthadmin
setgid www-data

env SECRET_KEY='{{ secret_key }}'
env DATABASE_NAME='{{ database_name }}'
{% if environ == "live" %}
env DATABASE_HOST='{{ database_host }}'
env DATABASE_USER='{{ database_user }}'
env DATABASE_PASSWORD='{{ database_password }}'
{% endif %}
env IAM_USER_SECRET_ACCESS_KEY='{{ aws_secret_access_key }}'
env IAM_USER_ACCESS_KEY_ID='{{ aws_access_key_id }}'

chdir {{ app_dir }}
exec {{ app_user_home }}/env/bin/gunicorn searchlist.wsgi:application
